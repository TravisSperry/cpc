<header id="header">
  <!-- Pre Nav Start -->
  <div class="pre-nav">
    <div class="row">
      <div class="col-md-4">
        <div class="pull-left">
          <li><i class="icon-map-marker" style="color:rgb(184, 55, 55);"></i><a style="color:white;" href="https://goo.gl/maps/YpZ7MrXR5CM2"> Columbus, OH</a></li>
        </div>
      </div>
      <div class="col-md-8">
        <div class="phone-email pull-right hidden-sm hidden-xs">
          <ul class="list-inline pull-left">
            <li><i class="icon-phone"></i> <span class="hidden-sm hidden-xs">Call Us: </span><a href="tel:+16143005025">(614) 300-5025 </a></li>
            <li><i class="icon-envelope-alt"></i> <span class="hidden-sm hidden-xs">Email:</span> <a href="mailto:contact@columbuspowdercoat.com"> contact@ColumbusPowderCoat.com</a></li>
          </ul>
        </div>
        <div class="phone-email pull-right hidden-md hidden-lg">
          <ul class="list-inline pull-left">
            <li><i class="icon-phone"></i> <span class="hidden-sm hidden-xs">Call Us: </span><a href="tel:+16143005025">(614) 300-5025 </a></li>
            <li><i class="icon-envelope-alt"></i> <span class="hidden-sm hidden-xs">Email:</span> <a href="mailto:contact@columbuspowdercoat.com"> contact@ColumbusPowderCoat.com</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <!-- Pre Nav End -->
  <!-- Main Nav Start -->
  <div class="nav">
    <a href="/">
      <%= image_tag 'cpc_logo.svg', height: '50px', alt: 'logo' %>
    </a>
    <% if current_user %>
      <li class="dropdown user-dropdown pull-right">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          <i class="icon-user"></i>
          <%= current_user.first_name %> <%= current_user.last_name[0,1] %>. <%= current_user.suffix if current_user.suffix %>
          <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
          <li>
            <%= link_to edit_user_password_path(current_user) do %>
              <i class="icon-gears"></i> Settings
            <% end %>
          </li>
          <li class="divider"></li>
          <li><a href="<%= destroy_user_session_path %>"><i class="icon-power-off"></i> Log Out</a></li>
        </ul>
      </li>
    <% end %>
  </div>
  <!-- Main Header End -->
</header>

      <link rel="apple-touch-icon" sizes="144x144" href="apple-touch-icon-144.png">
 <%= render 'layouts/shim' %>

</head>


<div class="row">
  <%= yield %>
</div>

<%= javascript_include_tag "application" %>
</body>

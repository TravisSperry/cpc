<html lang="en">
<head>
 <meta charset="utf-8" />

 <!-- Uncomment to make IE8 render like IE7 -->
 <!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

 <!-- Set the viewport width to device width for mobile -->
 <meta name="viewport" content="width=device-width, initial-scale=1.0" />

 <title><%= content_for?(:title) ? yield(:title) : "CPC:ColumbusPowderCoat" %></title>

 <%= favicon_link_tag %>
 <%= stylesheet_link_tag    "application" %>
 <%= javascript_include_tag "vendor/custom.modernizr" %>
 <%= csrf_meta_tags %>
 <%= render 'layouts/shim' %>

</head>

<%= render 'layouts/header' %>


  <div class="row">
    <div class="small-12 small-centered columns">

    <% if flash[:error] %>
      <div data-alert class="alert-box error"><%= flash[:error] %><a href="#" class="close">&times;</a></div>
    <% end %>

    <%if flash[:notice] %>
      <div data-alert class="alert-box success"><%= flash[:notice] %><a href="#" class="close">&times;</a></div>
    <% end %>

    <%if flash[:alert] %>
      <div data-alert class="alert-box alert"><%= flash[:alert] %><a href="#" class="close">&times;</a></div>
    <% end %>

    <%= yield %>
    </div>
  </div>

  <%= javascript_include_tag "application" %>
</body>
</html>


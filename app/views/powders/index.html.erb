<div class="container mt-lg-5 mt-md-5 mt-2">
  <h1>Powders</h1>
  <div class="btn-group d-none d-md-flex mt-4 mb-4">
    <%= link_to 'New Powder', new_powder_path, class: 'btn btn-primary' %>
    <%= link_to 'New Manufacturer', new_manufacturer_path, class: 'btn btn-secondary' %>
    <%= link_to 'Manage Color Options', colors_path, class: 'btn btn-info' %>
  </div>
  <div class="d-block d-md-none mb-4 mt-4 mt-md-0 mt-md-0">
    <%= link_to 'New Powder', new_powder_path, class: 'btn btn-block btn-primary' %>
    <%= link_to 'New Manufacturer', new_manufacturer_path, class: 'btn btn-block btn-secondary' %>
    <%= link_to 'Manage Color Options', colors_path, class: 'btn btn-block btn-info' %>
  </div>
  <div class="mt-3 mb-3">
    <strong>Download:</strong>
    <%= link_to "CSV", powders_path(format: "csv") %>
  </div>
  <table class="datatable display table-responsive no-wrap" width='100%'>
    <thead>
      <tr>
        <th>Manufacturer</th>
        <th>Color</th>
        <th class="not-mobile">Part number</th>
        <th class="not-mobile">Boxes</th>
        <th>Weight</th>
        <th class="all"></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @powders.each do |powder| %>
        <tr>
          <td><%= powder.manufacturer.name if powder.manufacturer %></td>
          <td><%= powder.name %></td>
          <td><%= powder.part_number %></td>
          <td><%= powder.boxes.count %></td>
          <td><%= powder.total_weight %> lbs</td>
          <td><%= link_to 'View', powder %></td>
          <td><%= link_to 'Edit', edit_powder_path(powder) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

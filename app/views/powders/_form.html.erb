<%= simple_form_for(@powder) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :manufacturer %>
    <%= f.association :color %>
    <%= f.input :part_number %>
    <%= f.input :high_demand %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Add Powder', class: 'btn btn-success' %>
  </div>
<% end %>

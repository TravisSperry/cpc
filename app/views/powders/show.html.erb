<div class="container" style="margin-top: 30px">
  <div class="row">
    <div class="col-md-6">
      <p>
        <strong>Manufacturer:</strong>
        <%= @powder.manufacturer ? @powder.manufacturer.name : 'Please add a manufacturer.' %>
      </p>

      <p>
        <strong>Name:</strong>
        <%= @powder.name ? @powder.name : 'Please add a name.' %>
      </p>

      <p>
        <strong>Color:</strong>
        <%= @powder.color ? @powder.color.name : 'Please add a color.' %>
      </p>

      <p>
        <strong>Part number:</strong>
        <%= @powder.part_number %>
      </p>
      <p>
        <strong>Boxes:</strong> <%= @powder.boxes.count %>
        <ol>
          <% @powder.boxes.order("weight ASC").each do |box| %>
            <li>
              <%= box.weight %> lbs (<%= link_to "view", box %> | <%= link_to "edit", edit_box_path(box) %>)
              <div class="progress">
                <div class="progress-bar bg-success" role="progressbar" style="width: <%= box.percent_left %>%;" aria-valuenow="<%= box.percent_left %>" aria-valuemin="0" aria-valuemax="100"><%= box.percent_left %>%</div>
              </div>
            </li>
          <% end %>
        </ol>
      </p>
      <p>
        <strong>Total In Stock Weight:</strong>
        <%= @powder.total_weight %> lbs
      </p>
    </div>
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">Manufacturer Specs</div>
        <div class="card-block">
          <% if @powder.part_number %>
            <% Powder::TCI_PRODUCT_FORMULATION.each_with_index do |(k,v), i| %>
              <p>
                <strong><%= k.to_s.gsub('_', ' ').titleize %></strong>: <%= v[@powder.part_number[i].to_i] %>
              </p>
            <% end %>
          <% else %>
            Please Add Part Number For Powder
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <div class="btn-toolbar">
        <%= link_to "Add Box", new_box_path(powder_id: @powder.id), class: "btn btn-success pull-right" %>
        <%= link_to "Powder Inventory", powders_path, class: "btn btn-primary pull-right" %>
      </div>
    </div>
  </div>
</div>

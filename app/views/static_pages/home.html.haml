#carouselExampleControls.carousel.slide.main-slider{"data-ride" => "carousel"}
  .carousel-inner
    .carousel-item.active
      = image_tag 'rack_pic_1.jpg', width:'100%', class: 'rack-pic d-block w-100'
    .carousel-item
      = image_tag 'new_cauv_table.jpg', width:'100%', class: 'd-block w-100'
    .carousel-item
      = image_tag 'cpc-engraved-logo.png', width:'100%', class: 'd-block w-100'
  %a.carousel-control-prev{"data-slide" => "prev", :href => "#carouselExampleControls", :role => "button"}
    %span.carousel-control-prev-icon{"aria-hidden" => "true"}
    %span.sr-only Previous
  %a.carousel-control-next{"data-slide" => "next", :href => "#carouselExampleControls", :role => "button"}
    %span.carousel-control-next-icon{"aria-hidden" => "true"}
    %span.sr-only Next

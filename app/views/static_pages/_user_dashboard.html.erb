<!-- Dashboard Side Nav **end** -->
<div class="container user_dashboard">
  <div class="row">
    <div class="col-md-3">
      <div class="dropdown show mb-2">
        <a class="btn btn-primary btn-block dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Manage Customers
        </a>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
          <%= link_to "New Customer", new_customer_path, class: "dropdown-item" %>
          <%= link_to "Customer Lookup", customers_path, class: "dropdown-item" %>
        </div>
      </div>
      <div class="dropdown show mb-2">
        <a class="btn btn-warning btn-block dropdown-toggle" href="#" role="button" id="dropdownQuotesLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Quote Calculators
        </a>
        <div class="dropdown-menu" aria-labelledby="dropdownQuotesLink">
          <%= link_to "General Quote", calculator_quote_requests_path, class: "dropdown-item" %>
          <%= link_to "Sand Blasting Quote", sand_blasting_quote_calculator_quote_requests_path, class: "dropdown-item" %>
        </div>
      </div>
      <%= link_to "Powder Management", powders_path, class: "btn btn-dark btn-block" %>
    </div>
    <div class="col-md-9">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-2">
              <i class="fas fa-list-ul icon-5x"></i>
            </div>
            <div class="col-10 text-right">
              <h3 class="card-title mb-0">
                <%= @new_quote_requests.count ? @new_quote_requests.count : 0 %>
                New Quote <%= pluralize_without_count(@new_quote_requests.count, 'Request')%>
                <%= @new_quote_requests.count == 0 ? "" : "!" %></h3>
            </div>
          </div>
        </div>
        <a href="<%= quote_requests_path %>">
          <div class="card-footer">
            <strong>
              View Quote Requests <i class="fas fa-chevron-right float-right mt-1"></i>
            </strong>
          </div>
        </a>
      </div>
    </div>
  </div><!-- /.row -->
  <div class="row mt-4">
    <div class="col-sm-12">
      <div class="card">
        <div class="card-header">
          <h1 class="mb-0">Outstanding Work Orders</h1>
        </div>
        <div class="card-body">
          <% if @outstanding_work_orders.any? %>
            <%= render 'work_orders/outstanding_work_orders', outstanding_work_orders: @outstanding_work_orders %>
          <% else %>
            <p>No Outstanding work orders.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div><!-- /.row -->
</div><!-- /.container -->

<div class="container user_dashboard">
  <div class="row mt-4">
    <div class="col-sm-12">
      <div class="card">
        <div class="card-header">
          <h1 class="mb-0">Outstanding Work Orders</h1>
        </div>
        <div class="card-body">
          <% if @outstanding_work_orders.any? %>
            <%= render 'work_orders/outstanding_work_orders', outstanding_work_orders: @outstanding_work_orders %>
          <% else %>
            <p>No Outstanding work orders.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div><!-- /.row -->

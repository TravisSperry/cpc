  <li class="nav-item mr-2">
    <a class="dropdown-toggle btn btn-warning nav-link" href="#" data-toggle="dropdown">
      Quote Calculators
    </a>
    <div class="dropdown-menu">
      <%= link_to "General Quote", calculator_quote_requests_path, class: "dropdown-item" %>

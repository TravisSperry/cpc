
.row
  .col-sm-8
    = form_tag '#', onSubmit: "return false", id: 'calculator-form' do
      .row.mb-3
        .col-sm-6
          = label_tag 'Labor Hours'
          = text_field_tag :labor_hours, nil, placeholder: 'Estimated # of hours', class: 'form-control', data: { rate: @quote_form.labor_rate }
      .row.mb-3
        .col-sm-6
          = label_tag 'Oven Hours'
          = text_field_tag :oven_hours, nil, placeholder: 'Estimated # of hours', class: 'form-control'
        .col-sm-6
          = label_tag 'Oven Size'
          = select_tag :oven_size,
            options_from_collection_for_select(@quote_form.oven_sizes, :last, :first),
            class: 'form-control'
      .row.mb-4
        .col-sm-6
          = label_tag 'Powder Pounds'
          = text_field_tag :powder_weight,
            nil,
            placeholder: 'Estimated # of lbs',
            class: 'form-control'
        .col-sm-6
          = label_tag 'Price per pound'
          = select_tag :powder_price,
            options_for_select(@quote_form.powder_costs),
            prompt: 'Select a powder price',
            class: 'form-control'
      .row.mt-3
        .col-lg-12.text-center.mb-2
          %label{:for => "margin"} Cost Of Business
          %br/
          %input{"data-provide" => "slider", "data-slider-max" => "8", "data-slider-min" => "0", "data-slider-step" => "1", "data-slider-ticks" => "[0, 1, 2, 3, 4, 5, 6, 7, 8]", "data-slider-ticks-labels" => "[\"IGT\", \"\", \"\", \"\", \"ITIGT\", \"\", \"\", \"\", \"IDHAFC\"]", "data-slider-tooltip" => "hide", "data-slider-value" => "2", :name => "cost-of-business", :type => "integer"}/
        .col-lg-12.text-center.mb-4
          %label{:for => "margin"} Pricing Scale
          %br/
          %input{"data-provide" => "slider", "data-slider-max" => "4", "data-slider-min" => "0", "data-slider-step" => "1", "data-slider-ticks" => "[0, 1, 2, 3, 4]", "data-slider-ticks-labels" => "[\"A\", \"B\", \"C\", \"R\", \"F\"]", "data-slider-tooltip" => "hide", "data-slider-value" => "0", :name => "margin", :type => "integer"}/
  / /.col-sm-8
  .col-sm-4
    %table.table.tabl-bordered
      %thead
        %tr
          %th Total
      %tbody
        %td#total
          $
          %span 0.00

<h2 class="mt-4 mb-4">Parts</h2>
<table class='table'>
  <thead>
    <tr>
      <th></th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Notes</th>
    </tr>
  </thead>
  <tbody>
    <% @work_order.line_items.each_with_index do |line_item, i| %>
    <tr>
      <td><%= i + 1 %></td>
      <td><%= line_item.description %></td>
      <td><%= line_item.quantity %></td>
      <td><%= line_item.notes %></td>
    </tr>
    <% end %>
  </tbody>
</table>

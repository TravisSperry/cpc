<div class="row">
  <div class="col-sm-12">
    <%= simple_form_for(@work_order) do |f| %>
    <div class="row mb-4">
      <div class="col-sm-12">
        <h2 class="text-muted">Account Information &amp; Scheduling</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <%= f.error_notification %>
      </div>
    </div>
    <div class="row mb-5">
      <div class="col-md-12">
        <div class="row">
          <div class="col-sm-12">
            <%= f.input :name, label: 'Job Name' %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-6">
            <%= f.association :customer, label_method: :name,
                                         selected: params[:customer_id],
                                         input_html: { class: 'chosen'} if params[:customer_id]%>
            <%= f.association :customer, label_method: :name,
                                         input_html: { class: 'chosen'} unless params[:customer_id]%>
            <%= f.association :contact, label_method: :full_name_and_title,
                                        collection: @customer.contacts,
                                        input_html: { class: 'chosen'} if @customer %>
          </div>
          <div class="col-lg-6">
            <%= f.input :date_scheduled, as: :string,
                                         placeholder: 'Select A Date',
                                         input_html: { class: "datetimepicker" } %>
            <%= f.input :date_due, as: :string,
                                   placeholder: 'Select A Date',
                                   input_html: { class: "datetimepicker" } %>
            <%= f.label :estimated_price %>
            <%= f.input :estimated_price, wrapper: :prepend, label: false do %>
              <div class="input-group-prepend">
                <span class="input-group-text">$</span>
              </div>
              <%= f.input_field :estimated_price, class: 'text-right' %>
              <div class="input-group-append">
                <span class="input-group-text">.00</span>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <h2 class="text-muted mb-4">Job Details</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <h3 class="text-muted">Services</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <%= f.association :services, as: :check_boxes, label: false, input_html: { class: 'ml-3 mr-1'} %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <h3 class="text-muted">Parts</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12 line-item-fields">
        <%= f.simple_fields_for :line_items do |line_item_form| %>
          <%= render 'line_item_fields', f: line_item_form %>
        <% end %>
        <div class="links mt-3">
          <%= link_to_add_association "Add Line Item", f, :line_items, class: 'btn btn-sm btn-info float-right', id: 'add_line_item' %>
        </div>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-sm-4">
        <%= f.simple_fields_for :attachments do |attachment_field| %>
          <%= attachment_field.input :attachment, label: 'Attachments', input_html: { multiple: true }%>
        <% end %>
      </div>
    </div>
    <hr class="mb-4">
    <div class="row">
      <div class="col-sm-6">
        <%= f.button :submit, 'Create Work Order', class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <%= simple_form_for(@work_order) do |f| %>
    <div class="row">
      <div class="col-sm-12">
        <%= f.error_notification %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-4">
        <%= f.association :customer, label_method: :name %>
        <%= f.association :contact, label_method: :full_name_and_title %>
      </div>
      <div class="col-sm-4">
        <%= f.input :date_scheduled, as: :string, input_html: { class: 'datetimepicker' } %>
        <%= f.input :date_due, as: :string, input_html: { class: 'datetimepicker' } %>
      </div>
      <div class="col-sm-4">
        <%= f.input :packaging_details, input_html: { rows: 5 } %>
        <%= f.input :date_completed, as: :string, input_html: { class: 'datetimepicker' } %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <%= f.button :submit %>
      </div>
    </div>
  <% end %>
  </div>
</div>

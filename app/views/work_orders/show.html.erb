<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <div class="row">
        <div class="col">
          <%= render 'work_order_information' %>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= render 'services', work_order: @work_order if @work_order.services.any? %>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= render 'parts', work_order: @work_order if @work_order.line_items.any? %>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <p>
            <%= link_to 'Edit', edit_work_order_path(@work_order) %> |
            <%= link_to 'Back', work_orders_path %>
          </p>
        </div>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="row">
        <div class="col">
          <%= link_to 'View PDF', work_order_path(format: :pdf),
                                  target: '_blank',
                                  class: 'btn btn-block btn-primary pull-right mb-3' %>
        </div>
      </div>
      <% unless @work_order.complete? %>
        <div class="row">
          <div class="col">
            <%= render 'status_form' %>

            <%= render 'mark_completed_form' %>
          </div>
        </div>
      <% end %>
      <div class="row notes-section">
        <div class="col">
          <div class="row">
            <div class="notes-form col">
              <%= render partial: 'notes/notable_form', locals: { resource: @work_order, note: @note } %>
            </div>
          </div>
          <div class="row mt-3">
            <div class="notes-index col">
              <%= render partial: 'notes/index_snippet', locals: { notes: @notes, page: params[:page] } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!doctype html>
<html>
  <head>
    <meta charset='utf-8' />
  </head>
  <body onload='number_pages'>
    <div id="header" style="text-align:center;">
      <%= wicked_pdf_image_tag 'cpc_logo.png', width: '35%', style: "margin: auto;" %>
    </div>
    <div id="content">
      <h2>Work Order #<%= @work_order.id %></h2>
      <p>
        <strong>Date:</strong> <%= Date.today.strftime("%B %d, %Y") %>
      </p>

      <h3 style="margin-bottom:0;"><%= @work_order.customer.name %></h3>
      <p style="margin-top:0;">
        <%= "#{@work_order.customer.address1} <br>".html_safe if @work_order.customer.address1 %>
        <%= "#{@work_order.customer.address2} <br>".html_safe if @work_order.customer.address2 %>
        <%= "#{@work_order.customer.city}, #{@work_order.customer.state} #{@work_order.customer.zip_code} <br>".html_safe if @work_order.customer %>
        <strong>Phone:</strong>
      </p>

    </div>
  </body>
</html>

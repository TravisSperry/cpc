<div class="quote_request_table">
  <table class="datatable display table-responsive no-wrap" width='100%'>
    <thead>
      <tr>
        <th>Date</th>
        <th class="not-mobile">Status</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Telephone</th>
        <th class="all"></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% quote_requests.each do |qr| %>
        <tr>
          <td><%= qr.created_at.strftime("%m/%d/%Y") %></td>
          <td><%= qr.status %></td>
          <td><%= qr.first_name %></td>
          <td><%= qr.last_name %></td>
          <td><%= qr.email %></td>
          <td><%= qr.telephone %></td>
          <td><%= link_to 'Show', qr %></td>
          <td>
            <% if qr.status == "New" %>
              <%= link_to "Mark As Viewed", mark_as_viewed_quote_request_path(qr) %>
            <% elsif qr.status == "Viewed" %>
              <%= link_to "Mark As Submitted", mark_as_submitted_quote_request_path(qr) %>
            <% elsif qr.status == "Submitted" %>
              <%= link_to "Mark As Won", mark_as_won_quote_request_path(qr) %><br />
              <%= link_to "Mark As Lost", mark_as_lost_quote_request_path(qr) %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

.container
  .row
    .col-sm-12
      %h1.mb-4 Sand Blasting Quote Calculator
  .row
    .col-sm-8
      = form_tag '#', onSubmit: "return false", id: 'sand-blasting-calculator-form' do
        .row.mb-3
          .col-sm-6
            = label_tag 'Labor Hours'
            = text_field_tag :labor_hours, nil, placeholder: 'Estimated # of hours', class: 'form-control', data: { rate: 100 }
        .row.mt-3
          .col-md-6.text-center.mb-4
            %label{:for => "margin"} Pricing Scale
            %br/
            %input{"data-provide" => "slider", "data-slider-max" => "4", "data-slider-min" => "0", "data-slider-step" => "1", "data-slider-ticks" => "[0, 1, 2, 3, 4]", "data-slider-ticks-labels" => "[\"A\", \"B\", \"C\", \"R\", \"F\"]", "data-slider-tooltip" => "hide", "data-slider-value" => "0", :name => "margin", :type => "integer"}/
    / /.col-sm-8
    .col-sm-4
      %table.table.tabl-bordered
        %thead
          %tr
            %th Total
        %tbody
          %td#total
            $
            %span 0.00

<div class="container contact">
  <div class="row">
    <div class="col-md-8">
      <p>
        <b>First name:</b>
        <%= @quote_request.first_name %>
      </p>

      <p>
        <b>Last name:</b>
        <%= @quote_request.last_name %>
      </p>

      <p>
        <b>Email:</b>
        <%= mail_to @quote_request.email %>
      </p>

      <p>
        <b>Telephone:</b>
        <%= @quote_request.telephone %>
      </p>

      <p>
        <b>Quantity year:</b>
        <%= @quote_request.quantity_year %>
      </p>

      <p>
        <b>Quantity run:</b>
        <%= @quote_request.quantity_run %>
      </p>

      <p>
        <b>Note:</b>
        <%= @quote_request.note %>
      </p>

      <% if @quote_request.quote_request_attachments %>
        <p>
          <b>Attachments:</b>
          <% @quote_request.quote_request_attachments.each_with_index do |qra, i|%>
            <%= link_to "Attachment #{i+1}", qra.attachment.url %>
          <% end %>
        </p>
      <% end %>

      <%= link_to 'Edit', edit_quote_request_path(@quote_request) %> | <%= link_to 'Destroy', @quote_request, method: :delete, data: { confirm: 'Are you sure you want to delete this quote request?' } %>
    </div>
    <div class="col-md-4">
      <div class="row">
        <div class="col">
          <h2>Add Note</h2>
          <%= simple_form_for [@quote_request, @note] do |f| %>
            <%= f.input :content %>
            <%= f.input :user_id, as: :hidden, input_html: { value: current_user.id } %>
            <%= f.input :notable_id, as: :hidden %>
            <%= f.input :notable_type, as: :hidden %>
            <%= f.submit 'Save', class: 'btn btn-sm btn-success float-right' %>
          <% end %>
        </div>
      </div>

      <div class="row mt-4">
        <div class="col notes">
          <% @quote_request.notes.where.not(created_at: nil).order(created_at: :desc).each do |note| %>
            <div class="card mb-2">
              <div class="card-body bg-light">
                <%= note.content  %>
              </div>
              <div class="card-footer">
                <span class="pull-left"><%= note.user.full_name %></span>
                <span class="pull-right"><%= note.created_at.strftime('%A, %b %d') %></span>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

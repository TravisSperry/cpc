<div class="container contact">
  <div class="row">
    <div class="col-md-8">
      <p>
        <b>Quote Request #:</b>
        <%= @quote_request.id %>
      </p>
      <p>
        <b>First name:</b>
        <%= @quote_request.first_name %>
      </p>

      <p>
        <b>Last name:</b>
        <%= @quote_request.last_name %>
      </p>

      <p>
        <b>Email:</b>
        <%= mail_to @quote_request.email %>
      </p>

      <p>
        <b>Telephone:</b>
        <%= @quote_request.telephone %>
      </p>

      <p>
        <b>Note:</b>
        <%= @quote_request.note %>
      </p>

      <p>
        <b>Quote Request Owner</b>
        <%= @quote_request.user.try :full_name %>
      </p>

      <% if @quote_request.quote_request_attachments %>
        <p>
          <b>Attachments:</b>
          <% @quote_request.quote_request_attachments.each_with_index do |qra, i|%>
            <%= link_to "Attachment #{i+1}", qra.attachment.url %>
          <% end %>
        </p>
      <% end %>

      <%= link_to 'Edit', edit_quote_request_path(@quote_request) %> | <%= link_to "Generate Calcuation", calculator_quote_requests_path %> | <%= link_to 'Destroy', @quote_request, method: :delete, data: { confirm: 'Are you sure you want to delete this quote request?' } %>
    </div>
    <div class="col-md-4 mt-md-0 mt-lg-0 mt-5">
      <div class="row">
        <div class="col">
          <h2>Add Note</h2>
          <%= render partial: 'notes/notable_form', locals: { resource: @quote_request, note: @note} %>
        </div>
      </div>

      <div class="row mt-4">
        <div class="col notes-index">
          <%= render partial: 'notes/index_snippet', locals: { notes: @notes, page: params[:page] } %>
        </div>
      </div>
    </div>
  </div>
</div>

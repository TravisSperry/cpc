<div class="row">
  <div class="col-sm-12">
    <%= simple_form_for(@contact) do |f| %>
      <div class="row">
        <div class="col-md-6">
          <%= f.error_notification %>

          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.input :phone %>
        </div>
        <div class="col-md-6">
          <%= f.input :email %>
          <%= f.input :title %>
          <%= f.association :customer, label: 'Company',
                                       input_html: { class: 'chosen' } unless params[:customer_id] %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <%= f.button :submit, class: 'btn btn-success' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

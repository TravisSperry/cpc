<div class="container">
<div class="row">
  <div class="col-sm-12">
    <%= link_to new_customer_path, class: "btn btn-primary float-right" do %>
      <i class='icon icon-plus'></i> Add Customer
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <h1>Listing Customers</h1>

    <table  class="datatable display table-responsive no-wrap" width='100%'>
      <thead>
        <tr>
          <th>Name</th>
          <th>Phone</th>
          <th>Fax</th>
          <th>Type</th>
          <% if current_user.admin? %>
            <th colspan="3"></th>
          <% else %>
            <th colspan="2"></th>
          <% end %>

        </tr>
      </thead>

      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.name %></td>
            <td><%= customer.phone %></td>
            <td><%= customer.fax %></td>
            <td><%= customer.account_type %></td>
            <td><%= link_to 'Manage', customer %></td>
            <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
            <% if current_user.admin? %>
              <td>
                <%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <div class="card">
        <div class="card-header">
          <h1 class="mb-0 d-inline">Listing Customers</h1>

          <%= link_to new_customer_path, class: "btn btn-primary float-right mt-1" do %>
            <i class='fas fa-plus'></i> Add Customer
          <% end %>
        </div>
        <div class="card-body">
          <table class="table datatable">
            <thead>
              <tr>
                <th>Name</th>
                <th>Phone</th>
                <th>Fax</th>
                <th>Type</th>
                <% if current_user.admin? %>
                  <th></th><th></th><th></th>
                <% else %>
                  <th></th><th></th>
                <% end %>
              </tr>
            </thead>
            <tbody>
              <% @customers.each do |customer| %>
                <tr>
                  <td><%= customer.name %></td>
                  <td><%= customer.phone %></td>
                  <td><%= customer.fax %></td>
                  <td><%= customer.account_type %></td>
                  <td><%= link_to 'Manage', customer %></td>
                  <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
                  <% if current_user.admin? %>
                    <td>
                      <%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %>
                    </td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

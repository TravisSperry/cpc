<div class="container">
  <h1>Listing Customers</h1>

  <table  class="datatable display table-responsive no-wrap" width='100%'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Phone</th>
        <th>Fax</th>
        <th>Type</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.name %></td>
          <td><%= customer.phone %></td>
          <td><%= customer.fax %></td>
          <td><%= customer.account_type %></td>
          <td><%= link_to 'Show', customer %></td>
          <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
          <td>
            <%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Customer', new_customer_path, class: 'btn btn-success' %>
</div>

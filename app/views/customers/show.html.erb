<div class="container">
  <div class="row mb-4">
    <div class="col-sm-12">
      <%= link_to new_customer_contact_path(@customer.id), class: "btn btn-primary float-right" do %>
        <i class="icon icon-plus"></i> Add Contact
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h1><%= @customer.name %></h1>
      <p>
        <%= link_to 'Edit', edit_customer_path(@customer) %>
      </p>
      <p class="mt-4">
        <%= @customer.address1 %> <br>
        <%= "#{@customer.address2} <br>".html_safe unless @customer.address2.blank? %>
        <%= "#{@customer.city}, #{@customer.state} #{@customer.zip_code}" %> <br>
      </p>
      <p>
        <strong>Phone:</strong> <%= @customer.phone %>
      </p>
      <p>
        <strong>Fax:</strong> <%= @customer.fax %>
      </p>
    </div>
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h2 class="mb-0">Contacts</h2>
        </div>
        <div class="card-body">
          <ul class="pl-4">
            <% @customer.contacts.each do |contact| %>
              <li><%= link_to contact.full_name, contact %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-sm-12">
      <h1>Work Orders</h1>
    </div>
  </div>
</div>

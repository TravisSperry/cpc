<div class="container">
  <div class="row justify-content-end mb-4">
    <div class="col-auto work-order-navbar">
      <% if @customer.company? %>
        <%= link_to new_customer_contact_path(@customer.id), class: "btn btn-primary add-contact" do %>
          <i class="fas fa-user"></i> Add Contact
        <% end %>
      <% end %>
      <%= link_to new_customer_work_order_path(@customer.id), class: "btn btn-warning mr-2 add-work-order #{disable_with_contact(@customer)}" do %>
        <i class="fas fa-plus"></i> Add Work Order
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h1 class="d-inline"><%= @customer.name %></h1> <small><%= link_to 'edit', edit_customer_path(@customer) %></small>
      <p class="mt-4">
        <% if @customer.has_valid_address? %>
          <%= @customer.address1 %> <br>
          <%= "#{@customer.address2} <br>".html_safe unless @customer.address2.blank? %>
          <%= "#{@customer.city}, #{@customer.state} #{@customer.zip_code}" %> <br>
        <% else %>
          <span class="text-danger">
            Please ensure customer has street address, city, state and zip.
          </span>
        <% end %>
      </p>
      <p>
        <strong>Phone:</strong> <%= @customer.phone %>
      </p>
      <% if @customer.fax %>
        <p>
          <strong>Fax:</strong> <%= @customer.fax %>
        </p>
      <% end %>
      <hr>
    </div>
    <div class="col-md-6">
      <%= render 'contact_information', customer: @customer if @customer.company? %>
    </div>
  </div>
  <div class="row mb-4">
    <div class="col-sm-12">
      <h1>Work Orders</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <table class="table datatable">
        <thead>
          <tr>
            <th>Work Order ID</th>
            <th>Job Name</th>
            <th>Contact Name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @customer.work_orders.each do |work_order| %>
            <tr>
              <td><%= work_order.id %></td>
              <td><%= work_order.name %></td>
              <td>
                <%= link_to work_order.contact.try(:full_name), work_order.contact %>
              </td>
              <td><%= link_to "View", work_order %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="modal fade" id="addContactModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          This customer needs a primary contact before you can add a work order.
        </div>
      </div>
    </div>
  </div>
</div>

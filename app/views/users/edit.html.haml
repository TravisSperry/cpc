.container
  %h2 Editing User
  = simple_form_for @user do |f|
    = f.input :first_name, required: true
    = f.input :last_name, required: true
    = f.input :email, required: true
    = f.input :can_approve_work_orders
    = f.submit 'Update User', class: 'btn btn-success', data: { confirm: 'Are you sure you want to create a new user?' }

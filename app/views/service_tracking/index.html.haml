.container
  %h1 Service Tracking

  %table.datatable
    %thead
      %tr
        %th Service
        %th Start Time
        %th End Time
        %th
        %th
        %th

    %tbody
      - @tracking_entries.each do |tracking_entry|
        %tr
          %td= tracking_entry.service&.service_name
          %td= tracking_entry.start_time
          %td= tracking_entry.end_time
          %td= link_to 'Show', tracking_entry
          %td= link_to 'Edit', edit_tracking_entry_path(tracking_entry)
          %td= link_to 'Destroy', tracking_entry, method: :delete, data: { confirm: 'Are you sure?' }

  %br

  = link_to 'Add Tracking Entry', new_work_order_service_tracking_tracking_entry_path(service_tracking_id: @service_tracking.id)
